#!/bin/sh

[[ -f ~/.Xresources ]] && xrdb -merge ~/.Xresources

# Custom screen colors
/usr/bin/xrandr --output LVDS1 --gamma 0.715:0.785:0.760

# Start sndio
sndiod -dd -s default -m mon -s monitor &

# wal load settings
wal -t -R

exec bspwm

